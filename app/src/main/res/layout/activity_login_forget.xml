<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".LoginForgetActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:textSize="17sp"
        android:text="输入新密码："
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_password_first"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_password_first"
        android:id="@+id/et_password_first"
        app:layout_constraintStart_toEndOf="@+id/tv_password_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_password_first"
        android:maxLength="11"
        android:inputType="numberPassword"
        android:hint="请输入新密码"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="17sp"
        android:text="确认新密码："
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_password_second"
        app:layout_constraintTop_toBottomOf="@+id/et_password_first"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_password_second"
        android:id="@+id/et_password_second"
        app:layout_constraintStart_toEndOf="@+id/tv_password_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_password_second"
        android:maxLength="11"
        android:inputType="numberPassword"
        android:hint="请再次输入新密码"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="17sp"
        android:text="　　验证码："
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_verifycode"
        app:layout_constraintTop_toBottomOf="@+id/et_password_second"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_verifycode"
        android:id="@+id/et_verifycode"
        app:layout_constraintStart_toEndOf="@+id/tv_verifycode"
        app:layout_constraintBottom_toBottomOf="@+id/tv_verifycode"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:hint="请输入验证码"
        app:layout_constraintEnd_toStartOf="@+id/btn_verifycode"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/et_verifycode"
        android:text="获取验证码"
        android:id="@+id/btn_verifycode"
        app:layout_constraintStart_toEndOf="@+id/et_verifycode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/et_verifycode"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="17sp"
        android:text="确定"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/btn_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_verifycode"/>

</androidx.constraintlayout.widget.ConstraintLayout>